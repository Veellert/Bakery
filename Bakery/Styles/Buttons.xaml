<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Bakery.Styles">

    <!--#region SystemButton -->

    <Style TargetType="Button" x:Key="SystemButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ButtonBase}">

                    <Grid>

                        <Border
                            x:Name="Border"
                            Background="{StaticResource TextBrush}"
                            CornerRadius="20"
                            Width="30"
                            Height="30"
                            Padding="3">

                            <Border
                                x:Name="Front"
                                Background="{StaticResource ButtonFrontBrush}"
                                CornerRadius="20"/>

                        </Border>

                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="Front">
                                <Setter.Value>
                                    <StaticResource ResourceKey="ButtonFrontHoverBrush"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="Front">
                                <Setter.Value>
                                    <StaticResource ResourceKey="TextBrush"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Padding" TargetName="Border" Value="6"/>
                            <Setter Property="Background" TargetName="Border">
                                <Setter.Value>
                                    <StaticResource ResourceKey="ButtonFrontHoverBrush"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--#endregion-->

    <!--#region RoundButton -->

    <Style TargetType="Button" x:Key="RoundButton">
        <Style.Setters>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <StaticResource ResourceKey="TextBrush"/>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily">
                <Setter.Value>
                    <StaticResource ResourceKey="Font"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ButtonBase}">

                        <Border
                            x:Name="Border"
                            CornerRadius="{Binding
                                ElementName=ContentPresenter,
                                Path=Tag}"
                            Padding="0 0 0 7"
                            Background="{StaticResource ButtonShadowBrush}">

                            <Border
                                x:Name="Front"
                                CornerRadius="{Binding
                                    ElementName=ContentPresenter,
                                    Path=Tag}"
                                Background="{StaticResource ButtonFrontBrush}">

                                <ContentPresenter
                                    x:Name="ContentPresenter"
                                    Tag="{TemplateBinding Tag}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                    Content="{TemplateBinding Content}"
                                    ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                    Focusable="False"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    Margin="{TemplateBinding Padding}"
                                    RecognizesAccessKey="True"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>

                            </Border>

                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="Border">
                                    <Setter.Value>
                                        <StaticResource ResourceKey="ButtonShadowHoverBrush"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Background" TargetName="Front">
                                    <Setter.Value>
                                        <StaticResource ResourceKey="ButtonFrontHoverBrush"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="Border" Value="Transparent"/>
                                <Setter Property="Padding" TargetName="Border" Value="0 7 0 0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>

    </Style>

    <!--#endregion-->

    <!--#region NavMenuButton -->

    <Style BasedOn="{StaticResource {x:Type ToggleButton}}" TargetType="{x:Type RadioButton}" x:Key="NavMenuButton">
        <Style.Setters>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily">
                <Setter.Value>
                    <StaticResource ResourceKey="Font"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground">
                <Setter.Value>
                    <StaticResource ResourceKey="TextBrush"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">

                        <Border
                            x:Name="Border"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            Background="{TemplateBinding Background}">

                            <Grid>

                                <Border
                                    x:Name="Underline"
                                    Background="{StaticResource ButtonFrontBrush}"
                                    VerticalAlignment="Bottom"
                                    Margin="2 0"
                                    CornerRadius="2"
                                    Height="4"/>

                                <TextBlock
                                    Name="Textblock"
                                    Text="{TemplateBinding Content}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Margin="10 0"
                                    Foreground="{TemplateBinding Foreground}"/>

                            </Grid>

                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="VerticalAlignment" TargetName="Textblock" Value="Top"/>
                                <Setter Property="Background" TargetName="Underline">
                                    <Setter.Value>
                                        <StaticResource ResourceKey="ButtonFrontHoverBrush"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>

        <Style.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsMouseOver" Value="True"/>
                    <Condition Property="IsChecked" Value="False"/>
                </MultiTrigger.Conditions>
                <MultiTrigger.Setters>
                    <Setter Property="FontSize" Value="22"/>
                    <Setter Property="Foreground">
                        <Setter.Value>
                            <StaticResource ResourceKey="ButtonFrontHoverBrush"/>
                        </Setter.Value>
                    </Setter>
                </MultiTrigger.Setters>
            </MultiTrigger>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Height" Value="{Binding MaxHeight}"/>
                <Setter Property="FontSize" Value="22"/>
            </Trigger>
        </Style.Triggers>

    </Style>

    <!--#endregion-->

    <!--#region MenuButton -->

    <Style BasedOn="{StaticResource {x:Type ToggleButton}}" TargetType="{x:Type RadioButton}" x:Key="MenuButton">
        <Style.Setters>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily">
                <Setter.Value>
                    <StaticResource ResourceKey="Font"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground">
                <Setter.Value>
                    <StaticResource ResourceKey="TextBrush"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">

                        <Border
                            x:Name="Border"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            Background="{TemplateBinding Background}">

                            <Grid>

                                <Border
                                    x:Name="Underline"
                                    Background="{StaticResource ButtonFrontBrush}"
                                    VerticalAlignment="Bottom"
                                    Margin="2 0"
                                    CornerRadius="2"
                                    Height="4"/>

                                <TextBlock
                                    Text="{TemplateBinding Content}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Margin="4"
                                    Foreground="{TemplateBinding Foreground}"/>

                            </Grid>

                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" TargetName="Underline">
                                    <Setter.Value>
                                        <StaticResource ResourceKey="ButtonFrontHoverBrush"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>

        <Style.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsMouseOver" Value="True"/>
                    <Condition Property="IsChecked" Value="False"/>
                </MultiTrigger.Conditions>
                <MultiTrigger.Setters>
                    <Setter Property="FontSize" Value="34"/>
                    <Setter Property="Foreground">
                        <Setter.Value>
                            <StaticResource ResourceKey="ButtonFrontHoverBrush"/>
                        </Setter.Value>
                    </Setter>
                </MultiTrigger.Setters>
            </MultiTrigger>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Height" Value="{Binding MaxHeight}"/>
                <Setter Property="FontSize" Value="34"/>
            </Trigger>
        </Style.Triggers>

    </Style>

    <!--#endregion-->

    <!--#region VerticalOptionsButton -->

    <Style TargetType="Button" x:Key="VerticalOptionsButton">
        <Style.Setters>
            <Setter Property="Height" Value="65"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ButtonBase}">

                        <Border
                            x:Name="Shadow"
                            CornerRadius="15"
                            Padding="0 0 0 5"
                            Background="{StaticResource ButtonShadowBrush}">

                            <Border
                                x:Name="Button"
                                Background="{StaticResource ButtonFrontBrush}"
                                CornerRadius="15">

                                <Grid
                                    VerticalAlignment="Center">

                                    <StackPanel
                                        Margin="0 -1 0 0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Orientation="Vertical">

                                        <Border
                                            x:Name="SmallButtonTopShadow1"
                                            Background="{StaticResource ButtonShadowBrush}"
                                            CornerRadius="50"
                                            Width="15"
                                            Height="15"/>

                                        <Border
                                            x:Name="SmallButtonTopShadow2"
                                            Background="{StaticResource ButtonShadowBrush}"
                                            CornerRadius="50"
                                            Margin="0 3"
                                            Width="15"
                                            Height="15"/>

                                        <Border
                                            x:Name="SmallButtonTopShadow3"
                                            Background="{StaticResource ButtonShadowBrush}"
                                            CornerRadius="50"
                                            Width="15"
                                            Height="15"/>

                                    </StackPanel>

                                    <StackPanel
                                        Margin="0 2 0 0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        Orientation="Vertical">

                                        <Border
                                            x:Name="SmallButtonBotShadow1"
                                            Background="{StaticResource ButtonShadowBrush}"
                                            CornerRadius="50"
                                            Width="15"
                                            Height="15"/>

                                        <Border
                                            x:Name="SmallButtonBotShadow2"
                                            Background="{StaticResource ButtonShadowBrush}"
                                            CornerRadius="50"
                                            Margin="0 3"
                                            Width="15"
                                            Height="15"/>

                                        <Border
                                            x:Name="SmallButtonBotShadow3"
                                            Background="{StaticResource ButtonShadowBrush}"
                                            CornerRadius="50"
                                            Width="15"
                                            Height="15"/>

                                    </StackPanel>

                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Orientation="Vertical">

                                        <Border
                                            x:Name="SmallButton1"
                                            Background="{StaticResource ButtonFrontBrush}"
                                            CornerRadius="50"
                                            Width="15"
                                            Height="15"/>

                                        <Border
                                            x:Name="SmallButton2"
                                            Background="{StaticResource ButtonFrontBrush}"
                                            CornerRadius="50"
                                            Margin="0 3"
                                            Width="15"
                                            Height="15"/>

                                        <Border
                                            x:Name="SmallButton3"
                                            Background="{StaticResource ButtonFrontBrush}"
                                            CornerRadius="50"
                                            Width="15"
                                            Height="15"/>

                                    </StackPanel>

                                    <StackPanel
                                        Margin="0 3 0 0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Orientation="Vertical">

                                        <Border
                                            x:Name="SmallButtonShadow1"
                                            Background="{StaticResource ButtonShadowBrush}"
                                            CornerRadius="50"
                                            Width="11"
                                            Height="9"/>

                                        <Border
                                            x:Name="SmallButtonShadow2"
                                            Background="{StaticResource ButtonShadowBrush}"
                                            CornerRadius="50"
                                            Margin="0 9"
                                            Width="11"
                                            Height="9"/>

                                        <Border
                                            x:Name="SmallButtonShadow3"
                                            Background="{StaticResource ButtonShadowBrush}"
                                            CornerRadius="50"
                                            Width="11"
                                            Height="9"/>

                                    </StackPanel>

                                </Grid>

                            </Border>

                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="Shadow" Value="{StaticResource ButtonShadowHoverBrush}"/>
                                <Setter Property="Background" TargetName="Button" Value="{StaticResource ButtonFrontHoverBrush}"/>

                                <Setter Property="Background" TargetName="SmallButton1" Value="{StaticResource ButtonFrontHoverBrush}"/>
                                <Setter Property="Background" TargetName="SmallButton2" Value="{StaticResource ButtonFrontHoverBrush}"/>
                                <Setter Property="Background" TargetName="SmallButton3" Value="{StaticResource ButtonFrontHoverBrush}"/>

                                <Setter Property="Background" TargetName="SmallButtonBotShadow1" Value="{StaticResource ButtonShadowHoverBrush}"/>
                                <Setter Property="Background" TargetName="SmallButtonBotShadow2" Value="{StaticResource ButtonShadowHoverBrush}"/>
                                <Setter Property="Background" TargetName="SmallButtonBotShadow3" Value="{StaticResource ButtonShadowHoverBrush}"/>

                                <Setter Property="Background" TargetName="SmallButtonTopShadow1" Value="{StaticResource ButtonShadowHoverBrush}"/>
                                <Setter Property="Background" TargetName="SmallButtonTopShadow2" Value="{StaticResource ButtonShadowHoverBrush}"/>
                                <Setter Property="Background" TargetName="SmallButtonTopShadow3" Value="{StaticResource ButtonShadowHoverBrush}"/>

                                <Setter Property="Background" TargetName="SmallButtonShadow1" Value="{StaticResource ButtonShadowHoverBrush}"/>
                                <Setter Property="Background" TargetName="SmallButtonShadow2" Value="{StaticResource ButtonShadowHoverBrush}"/>
                                <Setter Property="Background" TargetName="SmallButtonShadow3" Value="{StaticResource ButtonShadowHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="Shadow" Value="Transparent"/>
                                <Setter Property="Padding" TargetName="Shadow" Value="0 5 0 0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <!--#endregion-->


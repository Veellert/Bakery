    <!--#region ImageButton -->

    <Style x:Key="ImageButton" TargetType="Button">
        <Style.Setters>
            <Setter Property="Width" Value="235"/>
            <Setter Property="Height" Value="330"/>
            <Setter Property="MinWidth" Value="225"/>
            <Setter Property="MinHeight" Value="320"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ButtonBase}">

                        <Border
                            x:Name="border"
                            BorderThickness="0"
                            SnapsToDevicePixels="True"
                            Background="{StaticResource ButtonFrontBrush}"
                            MinHeight="{TemplateBinding MinHeight}"
                            MinWidth="{TemplateBinding MinWidth}"
                            Uid="{TemplateBinding Uid}"
                            CornerRadius="20">

                            <!--На 10 меньше-->
                            <Rectangle
                                Width="{Binding ElementName=border, Path=MinWidth}"
                                Height="{Binding ElementName=border, Path=MinHeight}"
                                RadiusX="20"
                                RadiusY="20">
                                <Rectangle.Fill>
                                    <ImageBrush
                                        Stretch="Uniform"
                                        ImageSource="{Binding ElementName=border, Path=Uid}"/>
                                </Rectangle.Fill>
                            </Rectangle>

                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border">
                                    <Setter.Value>
                                        <StaticResource ResourceKey="ButtonFrontHoverBrush"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <!--#endregion-->

    <!--#region SwitherButton -->

    <Style x:Key="SwitcherButton" TargetType="{x:Type RadioButton}">
        <Setter Property="Background" Value="{StaticResource ButtonFrontBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ButtonShadowBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource Font}"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">

                    <Grid
                        x:Name="templateRoot"
                        Background="Transparent"
                        SnapsToDevicePixels="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border
                            x:Name="radioButtonBorder"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="15"
                            Width="100"
                            Height="40"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="Center">

                            <Grid
                                x:Name="markGrid"
                                Margin="15 -3"
                                VerticalAlignment="Center">

                                <TextBlock
                                    x:Name="optionMark"
                                    HorizontalAlignment="Right"
                                    Text="Off"
                                    FontSize="28"
                                    Foreground="{StaticResource TextBrush}"/>

                            </Grid>

                        </Border>

                        <Border
                            x:Name="switcher"
                            Margin="2"
                            HorizontalAlignment="Left"
                            CornerRadius="10"
                            Padding="3"
                            Width="27"
                            Height="35"
                            BorderBrush="{StaticResource TextBrush}"
                            BorderThickness="3"
                            Background="{StaticResource TextBrush}">

                            <StackPanel
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">

                                <Border
                                    Width="3"
                                    CornerRadius="2"
                                    Background="{StaticResource ButtonFrontBrush}"
                                    x:Name="switchbord1"/>

                                <Border
                                    Width="3"
                                    CornerRadius="2"
                                    Margin="2 0"
                                    Background="{StaticResource ButtonFrontBrush}"
                                    x:Name="switchbord2"/>

                                <Border
                                    Width="3"
                                    CornerRadius="2"
                                    Background="{StaticResource ButtonFrontBrush}"
                                    x:Name="switchbord3"/>

                            </StackPanel>

                        </Border>

                        <ContentPresenter
                            x:Name="contentPresenter"
                            Grid.Column="1"
                            Focusable="False"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            Margin="{TemplateBinding Padding}"
                            RecognizesAccessKey="True"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>

                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="HasContent" Value="true">
                            <Setter Property="Padding" Value="4 0 0 0"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" TargetName="switcher" Value="{StaticResource ButtonShadowHoverBrush}"/>
                            <Setter Property="Background" TargetName="switchbord1" Value="{StaticResource TextBrush}"/>
                            <Setter Property="Background" TargetName="switchbord2" Value="{StaticResource TextBrush}"/>
                            <Setter Property="Background" TargetName="switchbord3" Value="{StaticResource TextBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter Property="Background" TargetName="switcher" Value="{StaticResource TextBrush}"/>
                            <Setter Property="BorderBrush" TargetName="switcher" Value="{StaticResource ButtonShadowHoverBrush}"/>
                            <Setter Property="Background" TargetName="switchbord1" Value="{StaticResource ButtonShadowHoverBrush}"/>
                            <Setter Property="Background" TargetName="switchbord2" Value="{StaticResource ButtonShadowHoverBrush}"/>
                            <Setter Property="Background" TargetName="switchbord3" Value="{StaticResource ButtonShadowHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="true">
                            <Setter Property="Background" TargetName="radioButtonBorder" Value="{StaticResource ButtonFrontHoverBrush}"/>
                            <Setter Property="BorderBrush" TargetName="radioButtonBorder" Value="{StaticResource ButtonShadowHoverBrush}"/>
                            <Setter Property="Text" TargetName="optionMark" Value="On"/>
                            <Setter Property="HorizontalAlignment" TargetName="optionMark" Value="Left"/>
                            <Setter Property="HorizontalAlignment" TargetName="switcher" Value="Right"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter Property="Background" TargetName="radioButtonBorder" Value="{StaticResource ButtonFrontBrush}"/>
                            <Setter Property="BorderBrush" TargetName="radioButtonBorder" Value="{StaticResource ButtonShadowBrush}"/>
                            <Setter Property="Text" TargetName="optionMark" Value="Off"/>
                            <Setter Property="HorizontalAlignment" TargetName="optionMark" Value="Right"/>
                            <Setter Property="HorizontalAlignment" TargetName="switcher" Value="Left"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="False"/>

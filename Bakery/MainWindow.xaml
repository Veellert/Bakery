            </StackPanel>

            <Grid
                VerticalAlignment="Top"
                Margin="10 0 10 10"
                Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="RadioButton" BasedOn="{StaticResource MenuButton}">
                        <Setter Property="FontSize" Value="28"/>
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="MaxHeight" Value="60"/>
                    </Style>
                </Grid.Resources>

                <RadioButton
                    x:Name="Edible"
                    MouseEnter="Edible_MouseEnter"
                    Unchecked="Edible_Unchecked"
                    Checked="Edible_Checked"
                    Content="Съедобное"/>

                <RadioButton
                    Command="{Binding COM_ShowHome}"
                    IsChecked="True"
                    Content="Главная"
                    Grid.Column="1"/>

                <RadioButton
                    x:Name="InEdible"
                    MouseEnter="InEdible_MouseEnter"
                    Unchecked="InEdible_Unchecked"
                    Checked="InEdible_Checked"
                    Content="Несъедобное"
                    Grid.Column="2"/>
            </Grid>
        </Grid>

        <!-- ItemPanel -->

        <Grid
            Height="Auto"
            x:Name="ItemPanel"
            Margin="40 0"
            Grid.Row="3"
            MouseLeave="ItemPanel_MouseLeave">
            <Grid.Resources>
                <Style TargetType="Border" x:Key="Border">
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="CornerRadius" Value="0 0 20 20"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
                <Style TargetType="Border" BasedOn="{StaticResource Border}" x:Key="Transparent">
                    <Setter Property="Opacity" Value="0.5"/>
                    <Setter Property="Background" Value="{StaticResource TopShadowBrush}"/>
                </Style>
                <Style TargetType="Border" BasedOn="{StaticResource Border}" x:Key="Panel">
                    <Setter Property="Padding" Value="20 0 20 5"/>
                </Style>
                <Style TargetType="RadioButton" BasedOn="{StaticResource NavMenuButton}">
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="MaxHeight" Value="40"/>
                </Style>
            </Grid.Resources>

            <Border
                x:Name="Eatable"
                Style="{StaticResource Border}">
                <Grid>
                    <Border Style="{StaticResource Transparent}"/>

                    <Border Style="{StaticResource Panel}">
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Stretch">
                            <RadioButton
                                x:Name="orders"
                                Command="{Binding COM_ShowOrders}"
                                Content="Заказы"/>

                            <RadioButton
                                x:Name="showcase"
                                Command="{Binding COM_ShowShowcase}"
                                Content="Витрина"/>

                            <RadioButton
                                x:Name="storage"
                                Command="{Binding COM_ShowStorage}"
                                Content="Склад"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <Border
                x:Name="Uneatable"
                Style="{StaticResource Border}">
                <Grid>
                    <Border Style="{StaticResource Transparent}"/>

                    <Border Style="{StaticResource Panel}">
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Stretch">
                            <RadioButton
                                x:Name="request"
                                Command="{Binding COM_ShowDeliveryRequests}"
                                Content="Заявки"/>

                            <RadioButton
                                x:Name="deliveries"
                                Command="{Binding Command}"
                                Content="Поставки"/>

                            <RadioButton
                                x:Name="staff"
                                Command="{Binding Command}"
                                Content="Сотрудники"/>

                            <RadioButton
                                x:Name="providers"
                                Command="{Binding Command}"
                                Content="Поставщики"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <popView:CashierPopup
            Grid.RowSpan="6"
            MouseEnter="OptionsPopup_MouseEnter"
            MouseLeave="OptionsPopup_MouseLeave"
            Visibility="Hidden"
            Margin="45 120"
            HorizontalAlignment="Left"
            x:Name="CashierPopup"/>
        <popView:BakerPopup
            Grid.RowSpan="6"
            MouseEnter="OptionsPopup_MouseEnter"
            MouseLeave="OptionsPopup_MouseLeave"
            Visibility="Hidden"
            Margin="45 120"
            HorizontalAlignment="Left"
            x:Name="BakerPopup"/>
        <popView:ManagerPopup
            Grid.RowSpan="6"
            MouseEnter="OptionsPopup_MouseEnter"
            MouseLeave="OptionsPopup_MouseLeave"
            Visibility="Hidden"
            Margin="45 120"
            HorizontalAlignment="Left"
            x:Name="ManagerPopup"/>

    </Grid>
</Window>

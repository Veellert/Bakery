<Window x:Class="Bakery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bakery"
        xmlns:viewModel="clr-namespace:Bakery.MVVM.ViewModel"
        xmlns:popView="clr-namespace:Bakery.UI.ContextPopup"
        mc:Ignorable="d"
        x:Name="this"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Height="750"
        Width="920"
        Title="Любовь и Булочки">

    <Window.DataContext>
        <viewModel:MainWindow/>
    </Window.DataContext>

    <Window.Resources>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontFamily" Value="{StaticResource Font}"/>
        </Style>

        <Style TargetType="ScrollBar" BasedOn="{StaticResource ScrollBar}"/>
        <Style TargetType="ListBoxItem" BasedOn="{StaticResource ListBox}"/>
        
        <Style TargetType="Button" BasedOn="{StaticResource RoundButton}"/>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Footer -->

        <Border
            Height="200"
            CornerRadius="40"
            Background="{StaticResource ButtonShadowBrush}"
            Grid.Row="5"/>

        <!-- Main -->

        <Border
            Padding="10 80 10 10"
            CornerRadius="40"
            Background="{StaticResource BackgroundBrush}"
            Margin="0 0 0 20"
            Grid.Row="2"
            Grid.RowSpan="4">
            <Border
                Padding="10">
                <ContentControl Content="{Binding CurrentView}"/>
            </Border>
        </Border>

        <!-- SystemPanel -->

        <Border
            Opacity=".7"
            CornerRadius="30 30 0 0"
            Background="{StaticResource TopFrontBrush}"
            MouseDown="Border_MouseDown"/>

        <Grid>
            <TextBlock
                Opacity=".6"
                Text="{Binding ElementName=this, Path=Title}"
                FontSize="40"
                Margin="20 0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                MouseDown="Border_MouseDown"/>

            <StackPanel
                Margin="0 0 20 0"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource SystemButton}">
                        <Setter Property="Margin" Value="5"/>
                    </Style>
                </StackPanel.Resources>

                <TextBox
                    x:Name="Search"
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                    Margin="10 0"
                    Width="210"
                    Style="{StaticResource SearchTextBox}"/>

                <Button Click="MinimizeButton_Click"/>

                <Button Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>

        <Border
            Background="{StaticResource TopShadowBrush}"
            Grid.Row="1"/>

        <!-- NavPanel -->

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="605"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border
                x:Name="NavPanel"
                Height="70"
                VerticalAlignment="Top"
                CornerRadius="30"
                Background="{StaticResource TopFrontBrush}"
                Grid.ColumnSpan="3"/>

            <Border
                VerticalAlignment="Top"
                Height="60"
                CornerRadius="0 0 30 30"
                Background="{StaticResource FrontBrush}"
                Grid.ColumnSpan="3"/>

            <Button
                x:Name="Options"
                Margin="0 10 0 0"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Height="40"
                Width="140"
                Tag="10"
                Content="Действия"
                LostFocus="OptionsButton_LostFocus"
                Click="OptionsButton_Click"/>

            <StackPanel
                Orientation="Horizontal"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="0 10 0 0"
                Grid.Column="2">
                <StackPanel.Resources>
                    <Style TargetType="Button" x:Name="button" BasedOn="{StaticResource RoundButton}">
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="Width" Value="40"/>
                        <Setter Property="Tag" Value="17"/>
                        <Setter Property="Margin" Value="5 0"/>
                    </Style>
                </StackPanel.Resources>
                
                <!--#region Buttons -->
